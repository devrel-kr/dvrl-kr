{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "RedirectWithQuery": {
      "matchCondition": {
        "route": "/{shortUrl}?{*query}"
      },
      "responseOverrides": {
        "response.statusCode": "301",
        "response.statusReason": "Moved Permanently",
        "response.headers.location": "/-/{shortUrl}?{query}"
      }
    },
    "Redirect": {
      "matchCondition": {
        "route": "/{shortUrl}"
      },
      "responseOverrides": {
        "response.statusCode": "301",
        "response.statusReason": "Moved Permanently",
        "response.headers.location": "/-/{shortUrl}"
      }
    },
    "Root": {
      "matchCondition": {
        "route": "/"
      },
      "responseOverrides": {
        "response.statusCode": "301",
        "response.statusReason": "Moved Permanently",
        "response.headers.location": "%DefaultRedirectUrl%"
      }
    }
  }
}
